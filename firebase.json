{
    "emulators": {
        "singleProjectMode": true,
        "auth": {
            "port": 9099
        },
        "ui": {
            "enabled": true
        },
        "database": {
            "port": 9000
        },
        "firestore": {
            "port": 8081
        }
    },
    "hosting": {
        "public": "dist",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}
